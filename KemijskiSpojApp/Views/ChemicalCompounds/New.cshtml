@model KemijskiSpojApp.Models.ChemicalViewModel

@{
    ViewBag.Title = "New";
}
@if (Model.ChemicalCompound.Id == 0)
{
    <h2>Novi kemijski spoj</h2>
}
else
{
    <h2>Izmijeni kemijski spoj</h2>

}
<hr />

@using (Html.BeginForm("Save", "ChemicalCompounds"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.ChemicalCompound.Name)
        @Html.TextBoxFor(m => m.ChemicalCompound.Name, new { @class = "form-control", autocomplete="off" })
        @Html.ValidationMessageFor(m => m.ChemicalCompound.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ChemicalCompound.ChemicalSymbol)
        @Html.TextBoxFor(m => m.ChemicalCompound.ChemicalSymbol, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.ChemicalCompound.ChemicalSymbol, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ChemicalCompound.ChemicalTypeId)
        @Html.DropDownListFor(m => m.ChemicalCompound.ChemicalTypeId, new SelectList(Model.ChemicalTypes, "Id", "Name"), "Odaberi tip", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ChemicalCompound.ChemicalTypeId, "", new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(m => m.ChemicalCompound.Id)

    <button class="btn btn-sm btn-success" type="submit">Sačuvaj</button>

}



